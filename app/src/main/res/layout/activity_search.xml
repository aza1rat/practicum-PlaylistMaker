<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <FrameLayout style="@style/HeaderFrameLayout">

        <ImageView
            android:id="@+id/back"
            style="@style/HeaderBackImageView" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/HeaderTextView"
            android:text="@string/search" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="?attr/colorSecondary">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableStart="@drawable/ic_search_16"
            android:drawablePadding="@dimen/icon_content_padding"
            android:drawableTint="?attr/colorOnSecondary"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="28dp"
            android:textColor="@color/yp_black"
            android:textColorHint="?attr/colorOnSecondary"
            android:textCursorDrawable="@color/blue"
            android:textFontWeight="400"
            android:textSize="@dimen/regular_text_size" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            app:tint="?attr/colorOnSecondary"
            android:clickable="true"
            android:src="@drawable/ic_clear_16"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>