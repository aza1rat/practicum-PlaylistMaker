<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/header_outer_indent"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/header_inner_indent"
        android:paddingTop="@dimen/header_inner_top_indent"
        android:paddingBottom="@dimen/header_inner_indent"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_size" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_button_margin"
        android:layout_marginTop="@dimen/header_space"
        android:layout_marginRight="@dimen/header_inner_indent"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/search"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/yp_black"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/main_button_corner_radius"
        app:icon="@drawable/ic_search_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_button_icon_padding"
        app:iconSize="@dimen/icon_size"
        app:iconTint="@color/yp_black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/media_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_button_margin"
        android:layout_marginTop="@dimen/main_button_margin"
        android:layout_marginRight="@dimen/main_button_margin"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/media_library"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/yp_black"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/main_button_corner_radius"
        app:icon="@drawable/ic_library_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_button_icon_padding"
        app:iconSize="@dimen/icon_size"
        app:iconTint="@color/yp_black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_button_margin"
        android:layout_marginTop="@dimen/main_button_margin"
        android:layout_marginRight="@dimen/main_button_margin"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/yp_black"
        android:textSize="@dimen/main_text_size"
        app:cornerRadius="@dimen/main_button_corner_radius"
        app:icon="@drawable/ic_settings_24"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_button_icon_padding"
        app:iconSize="@dimen/icon_size"
        app:iconTint="@color/yp_black" />
</LinearLayout>