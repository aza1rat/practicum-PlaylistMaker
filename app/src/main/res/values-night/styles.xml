<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLayoutBackground">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="DayNightButtonDrawableTint" parent="BaseButtonUnelevated">
        <item name="android:drawableTint">@color/white</item>
    </style>
    <style name="DayNightTextColor" parent="BaseTextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DayNightTint">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="SettingsSwitchDayNight" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="trackTint">@color/blue_light</item>
        <item name="thumbTint">@color/blue</item>
    </style>
    <style name="DayNightSearchEmptyImageView" parent="SearchIllustrationImageView">
        <item name="android:src">@drawable/il_search_empty_dark_120</item>
    </style>

    <style name="DayNightSearchNoInternetImageView" parent="SearchIllustrationImageView">
        <item name="android:src">@drawable/il_no_internet_dark_120</item>
    </style>
</resources>